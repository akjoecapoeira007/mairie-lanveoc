# Protection du dossier API
# Autoriser l'accès aux fichiers PHP
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

# Empêcher l'accès direct aux fichiers de configuration
<FilesMatch "^(config|\.env)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Headers CORS pour permettre les requêtes depuis le site
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

